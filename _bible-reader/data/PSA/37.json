        "reference": {
          "chapter": 37,
          "verse": 11
        }
      },
      {
        "noteId": 4358,
        "caller": "+",
        "text": "Or upholds him with His hand",
        "reference": {
          "chapter": 37,
          "verse": 24
        }
      },
      {
        "noteId": 4359,
        "caller": "+",
        "text": "Or for there is a future for the man of peace",
        "reference": {
          "chapter": 37,
          "verse": 37
        }
      }
